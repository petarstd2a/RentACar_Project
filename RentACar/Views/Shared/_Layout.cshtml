<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - IN Car rent</title>

    <link href='https://fonts.googleapis.com/css?family=Oxygen:400,300,700&subset=latin,latin-ext' rel='stylesheet' type='text/css'>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <meta name="description" content="The description of my page" />
</head>
<body>
    <!-- Navbar -->
    <div class="navbar navbar-default navbar-fixed-top navbar-style">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand">
                    <a href='@Url.Action("Index", "Home")'>
                        <img class="navbar-logo" src="~/Images/Logos/in-logo.png" />
                    </a>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-pages">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Cars", "CarList", "Home", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <!-- Content -->
    @RenderBody()

    <div class="container">
        <div class="row">
            <div class="col-xs-5">
                <hr />
            </div>
            <div class="col-xs-2 text-center">
                <img class="footer-image" src="~/Images/Logos/in-logo.png" />
            </div>
            <div class="row">
                <div class="col-xs-5">
                    <hr />
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-offset-4 col-xs-3 col-md-1 text-center">
                    <a href='@Url.Action("Index", "Home")'>Home</a>
                </div>
                <div class="col-xs-3 col-sm- col-md-1 text-center">
                    <a href='@Url.Action("About", "Home")'>About</a>    
                </div>
                <div class="col-xs-3 col-md-1 text-center">
                    <a href='@Url.Action("Contact", "Home")'>Contact</a>
                </div>
                <div class="col-xs-3 col-md-1 text-center">
                    <p>Partners</p>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
